<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@drawable/back"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택한 기간동안 선택한 시간을 기준으로 반복해서 통지를 받을수 있습니다. 설정하시려면 메뉴버튼을 눌러주세요"
        android:textColor="#ffffff"/>
    
    <Button
        android:id="@+id/seat_dont_notify"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFF0000"
        android:text="통지하지 않기"/>
    
	<TextView
        android:id="@+id/seat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FFFF0000"
            android:text="전체좌석 " />
        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FF008000"
            android:text="사용좌석 " />
        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FF0000FF"
            android:text="잔여좌석 " />
    </LinearLayout>

    <ListView
        android:id="@+id/seat_list"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginBottom="20dip"
        android:cacheColorHint="#00000000"
        android:divider="#00000000"
        android:dividerHeight="40px" >

    </ListView>

</LinearLayout>
